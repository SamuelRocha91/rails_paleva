<%= form_with(url: update_offer_dish_path(@dish.id, @offer.id)) do |f| %>
  <div>
    <%= f.label :name, 'Nome da porção' %>
    <%= f.text_field :name, name: 'format[name]', value: @offer.format.name, readonly: true %>
  </div>
  <div>
    <%= f.label :details, 'Detalhes da porção' %>
    <%= f.text_field :details, name: 'offer[details]' %>
  </div>
   <div>
    <%= f.label :price, 'Preço da porção'  %>
    <%= f.number_field :price, name: 'offer[price]' %>
  </div>
  <%= f.submit 'Salvar' %>
<% end %>