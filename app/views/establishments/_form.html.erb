<%= form_with(model: @establishment) do |f| %>
  <div class='mb-3'>
    <%= f.label :trade_name, class: 'form-label' %>
    <%= f.text_field :trade_name, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= f.label :legal_name, class: 'form-label' %>
    <%= f.text_field :legal_name, class: 'form-control' %>
  </div>

   <div class='mb-3'>
    <%= f.label :cnpj, class: 'form-label' %>
    <%= f.text_field :cnpj, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= f.label :address, class: 'form-label' %>
    <%= f.text_field :address, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= f.label :phone_number, class: 'form-label' %>
    <%= f.text_field :phone_number, class: 'form-control' %>
  </div>

  <div class='mb-3'>
    <%= f.label :email, class: 'form-label' %>
    <%= f.text_field :email, class: 'form-control' %>
  </div>

  <div>
    <h2>Hor√°rio de funcionamento</h2>
    <%= f.fields_for :operating_hours do |oh| %>
      <div class='mb-3'>
        <%= oh.label :week_day, I18n.t(oh.object.week_day), class: 'form-label' %>
        <%= oh.hidden_field :week_day %>
      </div>

      <div class='mb-3'>
        <%= oh.label :start_time, class: 'form-label' %>
        <%= oh.time_field :start_time, class: oh.object.week_day  + ' form-control'%>
      </div>

      <div class='mb-3'>
        <%= oh.label :end_time, class: 'form-label' %>
        <%= oh.time_field :end_time, class: oh.object.week_day + ' form-control' %>
      </div>

      <div class='form-check'>
        <%= oh.label :is_closed, class: 'form-label' %>
        <%= oh.check_box :is_closed, class: oh.object.week_day + ' form-control' %>
      </div>
    <% end %>
  </div>

  <%= f.submit 'Salvar', class:'btn btn-primary'%>
<% end %>