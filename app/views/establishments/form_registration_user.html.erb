<h1 class='title'>Pré-cadastro de usuário</h1>

<% if @user.errors.any? %>
  <div class='d-flex flex-column align-items-center mt-5'>
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @user.errors.full_messages.each do |msg|%>
       <li class='text-danger'>
          <%= msg %>
       </li>
       <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(
  url: user_new_establishment_path(@establishment.id), 
  class: 'form-edit'
  ) do |f| %>
  <div class='mb-3 mt-5'>
    <%= f.label :email, 'E-mail', class: 'form-label' %>
    <%= f.email_field :email, 
                      class: 'form-control', 
                      placeholder: 'email@example.com' %>
  </div>
  <div class='mb-3 mt-5'>
    <%= f.label :cpf, 'CPF', class: 'form-label' %>
    <%= f.text_field :cpf, class: 'form-control'%>
  </div>
  <%= f.submit 'Salvar', class: 'btn btn-primary'%>
<% end %>