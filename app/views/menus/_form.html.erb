<%= form_with(model: @menu, class: 'form-edit') do |f| %>
  <div class='mb-3 mt-5'>
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'ex: Café da manhã' %>
  </div>
  <div class='mb-3 mt-5'>
    <%= f.label :valid_from, class: 'form-label' %>
    <%= f.date_field :valid_from, class: 'form-control valid-from' %>
  </div>
  <div class='mb-3 mt-5'>
    <%= f.label :valid_until, class: 'form-label' %>
    <%= f.date_field :valid_until, class: 'form-control valid-until' %>
  </div>
  <%= f.submit 'Salvar', class: 'btn btn-primary'%>
<% end %>